@using BlazorDemoApp.Features.Shared

@page "/AgreementForm" 
<h3>AgreementForm</h3>

<div style="display:flex;height:100vh">
  <div>
    <div class="card">
      <div class="card-header">
        <h5>Select Agency Signer</h5>
      </div>
      <div class="card-body">
				<input type="radio" name="agencySigner" value="@agreement.SelectedValue"   />I am signing the agreement
        <br />
				<input type="radio" name="agencySigner" value="@agreement.SelectedValue" />Someone from an agency is signing the agreement
      </div>
      <div class="card-header">
        <h5>Digitally Sign the Premium Finance Agreement</h5>
      </div>
      <div class="card-body">
        <div class="form-group row">
          <label for="fullName" class="col-sm-2 col-form-label">Your Name</label>
          <div class="col-sm-10">
						<input type="text" id="fullName" class="form-control custom-input" @bind="agreement.FullName" maxlength="50" required />
          </div>
        </div>
        <div class="form-group row mt-3">
          <label for="email" class="col-sm-2 col-form-label">Your Email</label>
          <div class="col-sm-10">
						<input type="email" id="email" class="form-control custom-input" @bind="agreement.Email" maxlength="100" required />
            <div class="form-group mt-3">
              <label>
								<input type="checkbox" @bind="agreement.SaveForLater" /> Save for Later
              </label>
            </div>
          </div>

        </div>

        <div class="form-group ">
          <div><label>Please accept the following Terms and Conditions </label></div>
					<div class="mt-3"><input type="checkbox" @bind="agreement.AcceptTerms" required /> I agree in the PFA</div>
        </div>
      </div>
    </div>
  </div>
</div>


@code {
	private AgreementDetails agreement = new AgreementDetails();
}