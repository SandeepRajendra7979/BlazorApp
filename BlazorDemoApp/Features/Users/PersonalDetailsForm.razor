@using BlazorDemoApp.Features.Shared
<div class="card">
    <div class="card-header">
        <h5>Digitally Sign the Premium Finance Agreement</h5>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <label for="fullName" class="col-sm-2 col-form-label">Your Name</label>
            <div class="col-sm-10">
                <input type="text" id="fullName" class="form-control custom-input" @bind="@user.FullName" maxlength="50" required />
            </div>
        </div>
        <div class="form-group row mt-3">
            <label for="email" class="col-sm-2 col-form-label">Your Email</label>
            <div class="col-sm-10">
                <input type="email" id="email" class="form-control custom-input" @bind="@user.Email" maxlength="100" required />
            </div>
        </div>
    </div>
</div>

@code {
    User user = new User();
}